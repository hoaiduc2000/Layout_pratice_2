<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="100dp"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingBottom="@dimen/length_15dp"
    android:paddingRight="@dimen/length_15dp"
    android:paddingLeft="@dimen/length_15dp"
    android:paddingTop="@dimen/length_15dp"
    android:background="@color/colorText">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_view_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_profile" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/colorTextHeader"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:id="@+id/text_view_profile"
            android:layout_toRightOf="@+id/image_view_circle"
            android:text="Profile The view of the side of a person's face " />
    </RelativeLayout>
</LinearLayout>